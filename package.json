{
  "name": "gearboxe-market-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter @car-market/web",
    "dev:admin": "turbo run dev --filter @car-market/admin",
    "build": "turbo run build",
    "build:web": "turbo run build --filter @car-market/web",
    "build:admin": "turbo run build --filter @car-market/admin",
    "start": "turbo run start",
    "start:web": "turbo run start --filter @car-market/web",
    "start:admin": "turbo run start --filter @car-market/admin",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.1.0",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}